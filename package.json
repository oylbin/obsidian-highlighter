{
  "name": "obsidian-highlighter",
  "version": "1.0.0",
  "description": "Obsidian plugin for highlighting text with customizable background and foreground colors",
  "main": "main.js",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --platform=neutral --target=es2018 --format=cjs --outfile=main.js --external:obsidian --external:electron",
    "dev": "npm run build -- --watch",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write src"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "highlight",
    "text-highlighting",
    "markdown"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "esbuild": "0.17.3",
    "eslint": "^8.18.0",
    "obsidian": "latest",
    "prettier": "^2.7.1",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anthropics/obsidian-highlighter"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/obsidian-highlighter"
  }
}